<%- include('../partials/head')%>
    <title>Show | Aphonistar</title>
</head>
<body>
    <%- include('../partials/nav')%>
    <section class="show-section">
      <div class="show-container">
        <div class="cloth-image">
          <div id="clothCarousel" class="carousel-slide" data-ride="carousel">
            <div class="carousel-inner">
              <% cloth.clothImages.forEach((img, i) => { %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                  <img crossorigin="anonymous" class="show-image" src="<%= img.url%>" alt="...">
                </div>
              <% }) %>
            </div>
            <% if(cloth.clothImages.length > 1) {%> 
              <a class="carousel-control-prev" href="#clothCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#clothCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            <% } %>
          </div>
  
          <!-- customers profile -->
          <div class="customer-details">       
            <h5 class="show-details">customer name: <%= cloth.ownerName.toUpperCase() %></h5>
            <h5 class="show-details">contact: <%= cloth.contact %></h5>
            <h5 class="show-details">delivery Date: <%= cloth.deliveryDate %></h5>
            <h5 class="show-details">Amout Deposited: <%= cloth.deposit %></h5>
            <h5 class="show-details">price: <%= cloth.price %></h5>

            <div class="measurements">
              <h5 class="show-details">measured In: <%= cloth.measurements %></h5>
              <h5 class="show-details">Neck circumference: <%= cloth.neck %></h5>
              <h5 class="show-details">Inside leg: <%= cloth.leg %></h5>
              <h5 class="show-details">WaistLines: <%= cloth.waist %></h5>
              <h5 class="show-details">Shoulder width: <%= cloth.shoulder %></h5>
              <h5 class="show-details">Arm length: <%= cloth.arm %></h5>
              <h5 class="show-details">Bicep circumference: <%= cloth.bicep %></h5>
              <h5 class="show-details">Chest circumference: <%= cloth.chest %></h5>
              <h5 class="show-details">Wrist circumference: <%= cloth.wrist %></h5>
              <h5 class="show-details">Back length: <%= cloth.back %></h5>
              <h5 class="show-details">Stomach circumference: <%= cloth.stomach %></h5>
              <h5 class="show-details">Hip circumference: <%= cloth.hip %></h5>
              <h5 class="show-details">Thigh: <%= cloth.thigh %></h5>
              <h5 class="show-details">created by: <%= cloth.owner.username %></h5>
            </div>
          </div>
        </div>
      </div>
    </section>

    
    
    <!-- Might Work Out -->
    
    <!-- <a class="btn" href="/clothing/<%= cloth._id %>/edit">Edit Cloth</a>

    <form action="/clothing/<%=cloth._id%>?_method=DELETE" method="POST">
      <button class="btn">Delete</button>
    </form> -->

    <a class="btn" href="/clothings">All Clothes</a>




    <% if(currentUser && cloth.owner.equals(currentUser._id)) { %>
        <div>
          <a class="btn" href="/clothing/<%= cloth._id %>/edit">Edit Cloth</a>
        </div>

        <form action="/clothing/<%=cloth._id%>?_method=DELETE" method="POST">
          <button class="btn">Delete</button>
        </form>
    <% } %>


    
  <%- include('../partials/footer')%>   


</body>
</html>